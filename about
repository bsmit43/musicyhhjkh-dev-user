<style>
  /* Industry-specific color scheme for General Business */
  :root {
    /* Override ALL color variables with industry-specific colors */
    --primary-color: #2563eb !important;
    --primary-light: #1d4ed8 !important;
    --primary-dark: #1e40af !important;
    
    --secondary-color: #64748b !important;
    --secondary-light: #475569 !important;
    --secondary-dark: #334155 !important;
    
    --accent-color: #059669 !important;
    --accent-light: #047857 !important;
    --accent-dark: #065f46 !important;
    
    /* Override common template color variables */
    --primary: #2563eb !important;
    --secondary: #64748b !important;
    --accent: #059669 !important;
    --dark: #1A1A1A !important;
    --light: #FFFFFF !important;
    --gray: #6C6C6C !important;
    
    /* Override gradient */
    --gradient: linear-gradient(135deg, #2563eb 0%, #1e40af 100%) !important;
    
    /* Common color mappings */
    --brand-primary: #2563eb !important;
    --brand-secondary: #64748b !important;
    --color-primary: #2563eb !important;
    --color-secondary: #64748b !important;
    --theme-primary: #2563eb !important;
    --theme-secondary: #64748b !important;
  }
  
  /* Apply colors to common Bootstrap and template patterns */
  .btn-primary,
  .primary-button,
  button.primary {
    background-color: var(--primary-color) !important;
    border-color: var(--primary-color) !important;
  }
  
  .btn-primary:hover,
  .primary-button:hover,
  button.primary:hover {
    background-color: var(--primary-dark) !important;
    border-color: var(--primary-dark) !important;
  }
  
  .text-primary {
    color: var(--primary-color) !important;
  }
  
  .bg-primary {
    background-color: var(--primary-color) !important;
  }
  
  .border-primary {
    border-color: var(--primary-color) !important;
  }
  
  /* Links */
  a {
    color: var(--primary-color);
  }
  
  a:hover {
    color: var(--primary-dark);
  }
  
  /* Hero sections */
  .hero,
  .hero-section,
  .jumbotron {
    background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%) !important;
  }
  
  /* Navigation */
  .navbar-brand {
    color: var(--primary-color) !important;
  }
  
  .nav-link:hover,
  .nav-link.active {
    color: var(--primary-color) !important;
  }
  
  /* Forms */
  .form-control:focus {
    border-color: var(--primary-color);
    box-shadow: 0 0 0 0.2rem rgba(var(--primary-color), 0.25);
  }
  
  /* Cards and sections */
  .card-header {
    background-color: var(--primary-light);
    color: white;
  }
  
  /* Industry-specific adjustments */
  
  
  
  
  
  
  /* Aggressive overrides for templates with hardcoded colors */
  /* Target specific color values that templates might use */
  [style*="#FF6B35"] { color: #2563eb !important; }
  [style*="#F7931E"] { color: #64748b !important; }
  [style*="#FFD23F"] { color: #059669 !important; }
  
  /* Override inline styles and hardcoded backgrounds */
  .hero[style*="background"] {
    background: linear-gradient(135deg, #2563eb 0%, #1e40af 100%) !important;
  }
  
  /* Force color changes on elements that might have inline styles */
  .text-primary,
  [class*="text-primary"],
  [class*="color-primary"] {
    color: #2563eb !important;
  }
  
  .bg-primary,
  [class*="bg-primary"],
  [class*="background-primary"] {
    background-color: #2563eb !important;
  }
  
  /* Override gradient classes */
  .text-gradient,
  [class*="gradient"] {
    background: linear-gradient(135deg, #2563eb 0%, #1e40af 100%) !important;
    -webkit-background-clip: text !important;
    -webkit-text-fill-color: transparent !important;
    background-clip: text !important;
  }
  
  /* Ensure buttons use new colors */
  button,
  .btn,
  [type="button"],
  [type="submit"] {
    transition: all 0.3s ease;
  }
  
  button:not(.btn-secondary):not(.btn-light):not(.btn-dark),
  .btn:not(.btn-secondary):not(.btn-light):not(.btn-dark) {
    background-color: #2563eb !important;
    border-color: #2563eb !important;
  }
  
  button:not(.btn-secondary):not(.btn-light):not(.btn-dark):hover,
  .btn:not(.btn-secondary):not(.btn-light):not(.btn-dark):hover {
    background-color: #1e40af !important;
    border-color: #1e40af !important;
  }
</style>
