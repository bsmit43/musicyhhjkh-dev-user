    <style>
        :root {
            /* Color Palette - Bold Industrial */
            --primary: #ffb400;
            --primary-dark: #e09900;
            --secondary: #292929;
            --secondary-light: #3d3d3d;
            --dark: #111111;
            --light: #f7f7f7;
            --white: #ffffff;
            --gray-100: #f5f5f5;
            --gray-200: #e0e0e0;
            --gray-300: #b0b0b0;
            --gray-400: #888888;
            --gray-500: #666666;
            --gray-600: #444444;
            --accent: #ff4a3c;

            /* Typography */
            --font-display: 'Bebas Neue', sans-serif;
            --font-body: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
            --fs-display-xl: clamp(3.5rem, 10vw, 6rem);
            --fs-display-lg: clamp(2.5rem, 7vw, 4.5rem);
            --fs-display-md: clamp(2rem, 5vw, 3.5rem);
            --fs-display-sm: clamp(1.75rem, 3vw, 2.5rem);
            --fs-xl: clamp(1.5rem, 2vw, 2rem);
            --fs-lg: clamp(1.25rem, 1.5vw, 1.5rem);
            --fs-md: 1.125rem;
            --fs-base: 1rem;
            --fs-sm: 0.875rem;
            --fs-xs: 0.75rem;
            --line-height-tight: 1.1;
            --line-height-normal: 1.5;
            --line-height-loose: 1.8;
            --tracking-tight: -0.025em;
            --tracking-normal: 0;
            --tracking-wide: 0.05em;
            --tracking-wider: 0.1em;

            /* Spacing */
            --space-3xs: clamp(0.25rem, 0.5vw, 0.375rem);
            --space-2xs: clamp(0.5rem, 0.75vw, 0.75rem);
            --space-xs: clamp(0.75rem, 1vw, 1rem);
            --space-sm: clamp(1rem, 1.5vw, 1.5rem);
            --space-md: clamp(1.5rem, 2.5vw, 2rem);
            --space-lg: clamp(2rem, 3vw, 3rem);
            --space-xl: clamp(3rem, 4vw, 4rem);
            --space-2xl: clamp(4rem, 6vw, 6rem);
            --space-3xl: clamp(6rem, 8vw, 8rem);
            
            /* Layout */
            --container-max: 1440px;
            --container-sm: 640px;
            --container-md: 768px;
            --container-lg: 1024px;
            --container-xl: 1280px;
            --navbar-height: 80px;
            --section-padding: var(--space-2xl) 0;
            
            /* Effects */
            --border-radius-sm: 4px;
            --border-radius-md: 8px;
            --border-radius-lg: 12px;
            --border-radius-xl: 16px;
            --border-width: 1px;
