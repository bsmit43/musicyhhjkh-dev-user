            margin-right: var(--space-sm);
        }

        .testimonial-author-info h5 {
            margin-bottom: 0;
            font-size: var(--fs-md);
        }

        .testimonial-author-info span {
            color: var(--gray-500);
            font-size: var(--fs-sm);
        }

        /* CTA Section */
        .cta {
            background-color: var(--primary);
            color: var(--dark);
            padding: var(--space-xl) 0;
            text-align: center;
        }

        .cta h2 {
            color: var(--dark);
            margin-bottom: var(--space-md);
        }

        .cta p {
            max-width: 700px;
            margin: 0 auto var(--space-lg);
            font-size: var(--fs-lg);
        }

        /* Footer */
        .footer {
            background-color: var(--dark);
            color: var(--gray-300);
            padding-top: var(--space-xl);
        }

        .footer h4 {
            color: var(--white);
            margin-bottom: var(--space-md);
            padding-bottom: var(--space-xs);
            position: relative;
        }

        .footer h4::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 40px;
            height: 3px;
            background-color: var(--primary);
        }

        .footer p {
            margin-bottom: var(--space-md);
        }

        .footer-about {
            margin-bottom: var(--space-lg);
        }

        .footer-links {
            margin-bottom: var(--space-lg);
        }

        .footer-links ul li {
            margin-bottom: var(--space-xs);
        }

        .footer-links ul li a {
            color: var(--gray-300);
            transition: color var(--transition-normal), padding-left var(--transition-normal);
            display: block;
        }

        .footer-links ul li a:hover {
            color: var(--primary);
            padding-left: var(--space-xs);
        }

        .footer-links ul li a i {
            margin-right: var(--space-2xs);
            color: var(--primary);
        }

        .footer-contact-item {
            display: flex;
            margin-bottom: var(--space-sm);
        }

        .footer-contact-icon {
            width: 40px;
            height: 40px;
            background-color: rgba(255, 255, 255, 0.1);
            color: var(--primary);
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: var(--space-sm);
            flex-shrink: 0;
        }

        .footer-contact-text h5 {
            color: var(--white);
            margin-bottom: 0;
            font-size: var(--fs-md);
        }

        .footer-social {
            display: flex;
            gap: var(--space-xs);
            margin-top: var(--space-md);
        }

        .footer-social a {
            width: 40px;
            height: 40px;
            background-color: rgba(255, 255, 255, 0.1);
            color: var(--white);
            display: flex;
            align-items: center;
            justify-content: center;
            transition: background-color var(--transition-normal), color var(--transition-normal);
        }

        .footer-social a:hover {
            background-color: var(--primary);
            color: var(--dark);
        }

        .footer-bottom {
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            padding: var(--space-md) 0;
            margin-top: var(--space-xl);
            text-align: center;
        }

        .footer-bottom p {
            margin-bottom: 0;
        }

        /* Responsive Media Queries */
        @media (min-width: 768px) {
            .hero-content h1 {
                font-size: var(--fs-display-xl);
            }

            .about-img {
                margin-bottom: 0;
            }
        }

        @media (min-width: 1024px) {
            .section-title {
                margin-bottom: var(--space-2xl);
            }

            .footer-about,
            .footer-links {
                margin-bottom: 0;
            }
        }
    </style>
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Inter:wght@400;500;600;700;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <style type="text/css">
        :root {
            --primary: #ffb400;
            --primary-dark: #e09900;
            --secondary: #292929;
            --secondary-light: #3d3d3d;
            --dark: #111111;
            --light: #f7f7f7;
            --white: #ffffff;
            --gray-100: #f5f5f5;
            --gray-200: #e0e0e0;
            --gray-300: #b0b0b0;
            --gray-400: #888888;
            --gray-500: #666666;
            --gray-600: #444444;
            --accent: #ff4a3c;
            --font-display: 'Bebas Neue', sans-serif;
            --font-body: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
            --fs-display-xl: clamp(3.5rem, 10vw, 6rem);
            --fs-display-lg: clamp(2.5rem, 7vw, 4.5rem);
            --fs-display-md: clamp(2rem, 5vw, 3.5rem);
            --fs-display-sm: clamp(1.75rem, 3vw, 2.5rem);
            --fs-xl: clamp(1.5rem, 2vw, 2rem);
            --fs-lg: clamp(1.25rem, 1.5vw, 1.5rem);
            --fs-md: 1.125rem;
            --fs-base: 1rem;
            --fs-sm: 0.875rem;
            --fs-xs: 0.75rem;
            --line-height-tight: 1.1;
            --line-height-normal: 1.5;
            --line-height-loose: 1.8;
            --tracking-tight: -0.025em;
            --tracking-normal: 0;
            --tracking-wide: 0.05em;
            --tracking-wider: 0.1em;
            --space-3xs: clamp(0.25rem, 0.5vw, 0.375rem);
            --space-2xs: clamp(0.5rem, 0.75vw, 0.75rem);
            --space-xs: clamp(0.75rem, 1vw, 1rem);
            --space-sm: clamp(1rem, 1.5vw, 1.5rem);
            --space-md: clamp(1.5rem, 2.5vw, 2rem);
            --space-lg: clamp(2rem, 3vw, 3rem);
            --space-xl: clamp(3rem, 4vw, 4rem);
            --space-2xl: clamp(4rem, 6vw, 6rem);
            --space-3xl: clamp(6rem, 8vw, 8rem);
            --container-max: 1440px;
            --container-sm: 640px;
            --container-md: 768px;
            --container-lg: 1024px;
            --container-xl: 1280px;
            --navbar-height: 80px;
            --section-padding: var(--space-2xl) 0;
            --border-radius-sm: 4px;
            --border-radius-md: 8px;
            --border-radius-lg: 12px;
            --border-radius-xl: 16px;
            --border-width: 1px;
            --border-width-thick: 3px;
            --shadow-sm: 0 1px 2px rgba(0, 0, 0, 0.05);
            --shadow-md: 0 4px 6px rgba(0, 0, 0, 0.1);
            --shadow-lg: 0 10px 15px rgba(0, 0, 0, 0.1);
            --shadow-xl: 0 20px 25px rgba(0, 0, 0, 0.15);
            --transition-fast: 0.2s ease;
            --transition-normal: 0.3s ease;
            --transition-slow: 0.5s ease;
        }


        :root {
            /* Color Palette - Bold Industrial */
            --primary: #ffb400;
            --primary-dark: #e09900;
            --secondary: #292929;
            --secondary-light: #3d3d3d;
            --dark: #111111;
            --light: #f7f7f7;
            --white: #ffffff;
            --gray-100: #f5f5f5;
            --gray-200: #e0e0e0;
            --gray-300: #b0b0b0;
            --gray-400: #888888;
            --gray-500: #666666;
            --gray-600: #444444;
            --accent: #ff4a3c;

            /* Typography */
            --font-display: 'Bebas Neue', sans-serif;
            --font-body: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
            --fs-display-xl: clamp(3.5rem, 10vw, 6rem);
            --fs-display-lg: clamp(2.5rem, 7vw, 4.5rem);
            --fs-display-md: clamp(2rem, 5vw, 3.5rem);
            --fs-display-sm: clamp(1.75rem, 3vw, 2.5rem);
            --fs-xl: clamp(1.5rem, 2vw, 2rem);
            --fs-lg: clamp(1.25rem, 1.5vw, 1.5rem);
            --fs-md: 1.125rem;
            --fs-base: 1rem;
            --fs-sm: 0.875rem;
            --fs-xs: 0.75rem;
            --line-height-tight: 1.1;
            --line-height-normal: 1.5;
            --line-height-loose: 1.8;
            --tracking-tight: -0.025em;
            --tracking-normal: 0;
            --tracking-wide: 0.05em;
            --tracking-wider: 0.1em;

            /* Spacing */
            --space-3xs: clamp(0.25rem, 0.5vw, 0.375rem);
            --space-2xs: clamp(0.5rem, 0.75vw, 0.75rem);
            --space-xs: clamp(0.75rem, 1vw, 1rem);
            --space-sm: clamp(1rem, 1.5vw, 1.5rem);
            --space-md: clamp(1.5rem, 2.5vw, 2rem);
            --space-lg: clamp(2rem, 3vw, 3rem);
            --space-xl: clamp(3rem, 4vw, 4rem);
            --space-2xl: clamp(4rem, 6vw, 6rem);
            --space-3xl: clamp(6rem, 8vw, 8rem);
            
            /* Layout */
            --container-max: 1440px;
            --container-sm: 640px;
            --container-md: 768px;
            --container-lg: 1024px;
            --container-xl: 1280px;
            --navbar-height: 80px;
            --section-padding: var(--space-2xl) 0;
            
            /* Effects */
            --border-radius-sm: 4px;
            --border-radius-md: 8px;
            --border-radius-lg: 12px;
            --border-radius-xl: 16px;
            --border-width: 1px;
            --border-width-thick: 3px;
            --shadow-sm: 0 1px 2px rgba(0, 0, 0, 0.05);
            --shadow-md: 0 4px 6px rgba(0, 0, 0, 0.1);
            --shadow-lg: 0 10px 15px rgba(0, 0, 0, 0.1);
            --shadow-xl: 0 20px 25px rgba(0, 0, 0, 0.15);
            --transition-fast: 0.2s ease;
            --transition-normal: 0.3s ease;
            --transition-slow: 0.5s ease;
        }

        /* Reset & Base Styles */
        *, *::before, *::after {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

